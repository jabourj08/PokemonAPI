@model Pokemon


<table id="PokemonInfoTable" class="table table-bordered shadow table-hover table-info">
    <tr class="table table-bordered shadow table-hover table-info">
        <th>Name</th>
        <th>Height</th>
        <th>Weight</th>
        <th>Base Experience</th>
        <th>Stats</th>
        <th>Sprite</th>
    </tr>
    <tr  class="d-table-row">
        <td>@Model.name</td>
        <td>@Model.height</td>
        <td>@Model.weight</td>
        <td>@Model.base_experience</td>
        <td>
        @foreach (var s in Model.stats)
        {
            <p>@s.stat.name: @s.base_stat</p>
        }
        </td>
        <td><img src=@Model.sprites.front_default /></td>
    </tr>
</table>